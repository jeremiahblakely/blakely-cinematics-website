    <script>
        // View switching
        function switchView(view) {
            const readingView = document.getElementById('readingView');
            const listView = document.getElementById('listView');
            const toggleButtons = document.querySelectorAll('.view-toggle button');
            
            toggleButtons.forEach(btn => btn.classList.remove('active'));
            
            if (view === 'reading') {
                readingView.classList.add('active');
                listView.classList.remove('active');
                toggleButtons[0].classList.add('active');
            } else if (view === 'list') {
                readingView.classList.remove('active');
                listView.classList.add('active');
                toggleButtons[1].classList.add('active');
            }
        }
        
        // Open email (switches to reading view and loads content)
        function openEmail(emailId) {
            // Switch to reading view
            switchView('reading');
            
            // Load email content (this would normally fetch from backend)
            const readingView = document.getElementById('readingView');
            readingView.innerHTML = `
                <div class="email-content-header">
                    <div class="email-actions">
                        <button class="email-action-btn">↩️ Reply</button>
                        <button class="email-action-btn">↪️ Forward</button>
                        <button class="email-action-btn">🗑️ Delete</button>
                        <button class="email-action-btn">📁 Archive</button>
                        <button class="email-action-btn">⭐ Star</button>
                        <div class="email-navigation">
                            <span class="email-counter">Email ${emailId} of 47</span>
                            <button class="nav-btn" ${emailId === 1 ? 'disabled' : ''} onclick="openEmail(${emailId - 1})">← Previous</button>
                            <button class="nav-btn" ${emailId === 20 ? 'disabled' : ''} onclick="openEmail(${emailId + 1})">Next →</button>
                        </div>
                    </div>
                    <h2>Email Subject Here</h2>
                    <div style="margin-top: 16px; color: var(--text-secondary);">
                        From: sender@example.com<br>
                        To: you@blakelycinematics.com<br>
                        Date: December 9, 2024 at 10:30 AM
                    </div>
                </div>
                <div style="padding: 24px; background: var(--surface); border: 1px solid var(--border-default); border-radius: 12px; margin-top: 24px;">
                    <p>This is the email content for email #${emailId}. In a real implementation, this would load the actual email content from your backend.</p>
                    <p style="margin-top: 16px;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                </div>
            `;
            
            // Update selected state in inbox
            document.querySelectorAll('.email-item').forEach(item => item.classList.remove('selected'));
            if (emailId <= 4) {
                document.querySelectorAll('.email-item')[emailId - 1].classList.add('selected');
            }
        }
        
        // Load more emails
        function loadMoreEmails() {
            const listContainer = document.querySelector('.extended-email-list');
            const currentCount = listContainer.children.length;
            
            // Add 10 more emails
            for (let i = currentCount + 1; i <= currentCount + 10; i++) {
                const emailItem = document.createElement('div');
                emailItem.className = 'extended-email-item';
                emailItem.onclick = () => openEmail(i);
                emailItem.innerHTML = `
                    <input type="checkbox" class="email-checkbox">
                    <div class="extended-email-content">
                        <div class="extended-email-left">
                            <div class="extended-email-meta">
                                <span class="extended-email-sender">Sender ${i}</span>
                                <span class="extended-email-subject">Email subject ${i}</span>
                            </div>
                            <div class="extended-email-preview">Preview text for email ${i}...</div>
                        </div>
                        <div class="extended-email-right">
                            <span class="extended-email-time">${i} days ago</span>
                        </div>
                    </div>
                `;
                listContainer.appendChild(emailItem);
            }
        }
        
        // Select all checkbox
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.extended-email-item .email-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
        
        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'j' || e.key === 'J') {
                // Next email
                console.log('Next email');
            } else if (e.key === 'k' || e.key === 'K') {
                // Previous email
                console.log('Previous email');
            } else if (e.key === 'Escape') {
                // Return to list view
                switchView('list');
            }
        });
    </script>
</body>
</html>